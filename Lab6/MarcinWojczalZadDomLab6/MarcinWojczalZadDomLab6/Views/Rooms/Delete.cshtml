<!--Widok służący do usuwania pokoju-->

@model MarcinWojczalZadDomLab6.Models.Entities.Room

@{
    ViewData["Title"] = "Delete";
}

<!--Główny nagłówek-->
<h1>Usuń</h1>

<h3>Czy na pewno chcesz usunąć ten pokój?</h3>
<!--Kontener z danymi pokoju-->
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Balcony)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Balcony)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <!--Przycisk usuwania pokoju oraz odnośnik do powrotu do głównej strony pokoi-->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Number" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy pokoi</a>
    </form>
</div>
