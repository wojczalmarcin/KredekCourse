<!--Widok służący do edycji typu pokoju-->

@model MarcinWojczalZadDomLab6.Models.Entities.RoomType

@{
    ViewData["Title"] = "Edit";
}

<!--Nagłówek główny-->
<h1>Edytuj typ pokoju</h1>

<!--Kontener z danymi do edycji-->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!--Odnośnik do strony głównej typów pokoi-->
<div>
    <a asp-action="Index">Wróć do listy typów pokoi</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
